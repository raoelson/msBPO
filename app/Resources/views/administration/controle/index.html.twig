{% extends '::front.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/admin/css/style.css') }}" type="text/css" />
{% endblock %}

{% block contenu %}
    <h1>
        Contrôles
    </h1>
    <table class="table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th width="70%">Libellé</th>
                <th>Pénalité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="text" name="libelle" class="libelle form-control" placeholder="Libellé du type d'action" /></td>
                <td><input type="number" name="penalite" class="penalite form-control" value="0" placeholder="Points de pénalité" /></td>
                <td>
                    <button type="button" class="save btn btn-default btn-primary" title="Enregistrer">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
            {% for controle in controles %}
                <tr>
                    <td>
                        <input type="hidden" name="id" class="id" value="{{ controle.id }}" />
                        <input type="text" name="libelle" class="libelle form-control" placeholder="Libellé du contrôle" value="{{ controle.libelle }}" />
                    </td>
                    <td><input type="number" name="penalite" class="penalite form-control" value="{{ controle.penalite }}" /></td>
                    <td>
                        <button type="button" class="edit btn btn-default" title="Enregistrer">
                            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var url_index_type_action = "{{ path("admin_controles") }}";
        var url_ajout_type_action = "{{ path("admin_controle_ajouter") }}";
        var url_modification_type_action = "{{ path("admin_controle_modifier", {'idControle': 'idControle'}) }}";

    </script>
    <script src="{{ asset('bundles/admin/js/controle.js') }}" type="text/javascript"></script>
{% endblock %}